<div id="<%= dom_id prize %>">
  <p>
    <strong>Name:</strong>
    <%= prize.name %>
  </p>

  <p>
    <strong>Value:</strong>
    <%= prize.value %>
  </p>

  <p>
    <strong>Competition:</strong>
    <%= prize.competition_id %>
  </p>

  <% if prize.winner_id %>
  <% winner = Applicant.find(prize.winner_id) %>
  <h3><strong><%= winner.name %></strong> <%= winner.order_id %></h3>
<% else %>
  <p>No winner generated yet.</p>
  <%= button_to "Generate Winner", generate_winner_prize_path(prize), method: :post %>
<% end %>

</div>
