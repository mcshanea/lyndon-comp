<li class="prize-item">
  <div class="prize-title">
    <strong>Name:</strong>
    <%= prize.name %>
  </div>

  <% if prize.winner_id %>
  <% winner = Applicant.find(prize.winner_id) %>
  <div class="prize-winner">
    <h3>Winner: <%= winner.name %> <%= winner.order_id %></h3>
  </div>
<% else %>
  <p>No winner picked yet.</p>
  <%= button_to "Pick a Winner", generate_winner_prize_path(prize), method: :post %>
<% end %>

</li>
