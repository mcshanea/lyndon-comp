<p style="color: green"><%= notice %></p>

<%= render @competition %>

<!-- Render child records -->
<ul class="prize-list">
<% @competition.prizes.each do |child_record| %>
  <%= render partial: 'competitions/prize', locals: { prize: child_record } %>
<% end %>
</ul>

<div>
  <%= link_to "Edit this competition", edit_competition_path(@competition) %> |
  <%= link_to "Back to competitions", competitions_path %>

  <%= button_to "Destroy this competition", @competition, method: :delete %>
</div>
